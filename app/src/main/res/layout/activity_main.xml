<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <Button
        android:id="@+id/b_answerkey"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/button_2"
        android:text="@string/answer_key"
        android:textAllCaps="false"
        android:textColor="@color/light_font"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iv_quest"
        app:layout_constraintTop_toBottomOf="@+id/tv_select" />

    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="119dp"
        android:layout_height="106dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/iv_cam"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/iv_cam"
        app:layout_constraintTop_toBottomOf="@+id/tv_click"
        app:srcCompat="@drawable/ic_camera"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_quest"
        android:layout_width="325dp"
        android:layout_height="182dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_omr"
        app:srcCompat="@drawable/ic_rect1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_cam"
        android:layout_width="325dp"
        android:layout_height="182dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_quest"
        app:srcCompat="@drawable/ic_rect1"
        tools:ignore="ContentDescription" />

    <RadioButton
        android:id="@+id/rb_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/goange"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/_20"
        android:textColor="@color/light_font"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="@+id/iv_quest"
        app:layout_constraintTop_toBottomOf="@+id/tv_select" />

    <RadioButton
        android:id="@+id/rb_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/goange"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/_100"
        android:textColor="@color/light_font"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="@+id/iv_quest"
        app:layout_constraintTop_toBottomOf="@+id/tv_select" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/select_the_number_of_questions"
        android:textColor="@color/meal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_quest"
        app:layout_constraintStart_toStartOf="@+id/iv_quest"
        app:layout_constraintTop_toTopOf="@+id/iv_quest" />

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="299dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/click_on_camera_icon_to_scan_your_omr_sheet"
        android:textColor="@color/meal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_cam"
        app:layout_constraintStart_toStartOf="@+id/iv_cam"
        app:layout_constraintTop_toTopOf="@+id/iv_cam" />

    <TextView
        android:id="@+id/tv_omr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="102dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/omr_checker"
        android:textColor="@color/goange"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>