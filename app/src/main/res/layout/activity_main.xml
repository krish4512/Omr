<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <Button
        android:id="@+id/b_answerkey"
        android:layout_width="130dp"
        android:layout_height="36dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="392dp"
        android:background="@drawable/button_2"
        android:text="@string/answer_key"
        android:textAllCaps="false"
        android:textColor="@color/meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_camera"
        android:layout_width="119dp"
        android:layout_height="106dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="138dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/iv_quest"
        android:layout_width="325dp"
        android:layout_height="182dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rect1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_cam"
        android:layout_width="325dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748"
        app:srcCompat="@drawable/ic_rect1"
        tools:ignore="ContentDescription" />

    <RadioButton
        android:id="@+id/rb_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="445dp"
        android:buttonTint="@color/goange"
        android:checked="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/_20"
        android:textColor="@color/light_font"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/rb_100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="227dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="445dp"
        android:buttonTint="@color/goange"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/_100"
        android:textColor="@color/light_font"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="501dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/select_the_number_of_questions"
        android:textColor="@color/meal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_click"
        android:layout_width="299dp"
        android:layout_height="60dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="233dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/click_on_camera_icon_to_scan_your_omr_sheet"
        android:textColor="@color/meal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_omr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/omr_checker"
        android:textColor="@color/goange"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />


</androidx.constraintlayout.widget.ConstraintLayout>